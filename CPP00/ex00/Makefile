$(OBJDIR)/%.o: $(SRCDIR)/%.cpp | $(OBJDIR)
	@$(CXX) $(FLAGS) -c $< -o $@

$(OBJDIR):
	@mkdir -p $(OBJDIR)

clean:
	@rm -rf $(OBJDIR)
	@echo "üßπ Cleaning up..."
	@echo "üóëÔ∏è  Object files have been swept away!"


fclean: clean
	@rm -f $(NAME)
	@echo "üí£ Full cleanup in progress..."
	@echo "üíÄ $(NAME) has been OBLITERATED!"


re: fclean all

.PHONY: all clean fclean re
