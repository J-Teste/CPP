NAME := PhoneBook
CXX := c++
FLAGS := -Wall -Wextra -Werror -std=c++98
SRCDIR := ./src
OBJDIR := obj
SRC := $(wildcard $(SRCDIR)/*.cpp)
OBJ := $(SRC:$(SRCDIR)/%.cpp=$(OBJDIR)/%.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CXX) $(FLAGS) -o $@ $^
