NAME :=  Unnecessary_violence
CXX := c++
FLAGS := -Wall -Wextra -Werror -std=c++98 -pedantic

SRCDIR := ./src
OBJDIR := tmp

SRC := \
	main.cpp \
	HumanA.cpp \
	HumanB.cpp \
	Weapon.cpp

SRCS := $(addprefix $(SRCDIR)/, $(SRC))

OBJ := $(addprefix $(OBJDIR)/, $(SRC:.cpp=.o))

GREEN = \033[0;32m
RESET = \033[0m
RED = \033[0;31m

all: $(NAME)

$(NAME): $(OBJ)
	@$(CXX) $(FLAGS) -o $@ $^
